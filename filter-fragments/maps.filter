# White Maps: 68 - 72
# Yellow Maps: 73 - 77
# Red Maps: 78 - 80
# High Red Maps: 81 - 83

# Map appearance
Show
  Rarity < Unique
  MapTier >= 14
  Class "Maps"
  SetBackgroundColor 77 0 117 255
  Continue

Show
  Rarity < Unique
  MapTier >= 11
  MapTier <= 13
  Class "Maps"
  SetBackgroundColor 104 0 0 255
  Continue

Show
  Rarity < Unique
  MapTier >= 6
  MapTier <= 10
  Class "Maps"
  SetBackgroundColor 91 96 0 255
  Continue

Show
  Rarity < Unique
  MapTier >= 1
  MapTier <= 5
  Class "Maps"
  SetBackgroundColor 72 72 72 255
  SetBorderColor 200 200 200 255
  Continue

Show
  Rarity < Unique
  Class "Maps"
  SetBorderColor 255 255 255 255
  SetTextColor 255 255 255 255
  Continue

# Influenced and other special maps have different text and borders
Show
  Rarity < Unique
  Class "Maps"
  HasInfluence Crusader Hunter Redeemer Warlord Shaper Elder
  SetTextColor 100 255 133 255
  Continue

Show
  Rarity < Unique
  Class "Maps"
  UberBlightedMap True
  SetTextColor 255 100 253 255
  Continue

Show
  Rarity < Unique
  Class "Maps"
  BlightedMap True
  SetTextColor 255 100 253 255
  Continue

Show
  Rarity < Unique
  Class "Maps"
  AnyEnchantment True
  SetBorderColor 138 137 255 255
  Continue

# Map size and sound
# sound 5 if it's in the same map tier range or higher, otherwise 4
# High area = same tier of maps (except high reds)
Show # High Reds
  Rarity < Unique
  MapTier >= 14
  Class "Maps"
  SetFontSize 45
  MinimapIcon 2 Purple Square
  PlayAlertSound 5 100 # map drop sound

Show # Low Reds - high area
  AreaLevel >= 78
  Rarity < Unique
  MapTier >= 11
  MapTier <= 13
  Class "Maps"
  SetFontSize 40
  MinimapIcon 0 Red Square
  PlayAlertSound 16 100 # map drop sound

Show # Low Reds - low area
  Rarity < Unique
  MapTier >= 11
  MapTier <= 13
  Class "Maps"
  SetFontSize 45
  MinimapIcon 2 Red Square
  PlayAlertSound 5 100 # map drop sound

Show # yellow - high area
  AreaLevel >= 73
  Rarity < Unique
  MapTier >= 6
  MapTier <= 10
  Class "Maps"
  SetFontSize 40
  MinimapIcon 0 Yellow Square
  PlayAlertSound 16 100 # map drop sound

Show # yellow - low area
  Rarity < Unique
  MapTier >= 6
  MapTier <= 10
  Class "Maps"
  SetFontSize 45
  MinimapIcon 2 Yellow Square
  PlayAlertSound 5 100 # map drop sound

Show # white - high area
  AreaLevel >= 68
  Rarity < Unique
  MapTier >= 1
  MapTier <= 5
  Class "Maps"
  SetFontSize 40
  MinimapIcon 0 White Square
  PlayAlertSound 16 100 # map drop sound

Show # white - low area
