## filter-fragments/base.filter

#######################
## Wisdom and Portal ##
#######################

Show
  BaseType "Scroll of Wisdom"
  ##ScrollOfWisdomText
  Continue

Show
  BaseType "Portal Scroll"
  ##PortalScrollText
  Continue

Hide # Red Maps
  BaseType "Scroll of Wisdom" "Portal Scroll"
  Class "Currency"
  AreaLevel > 77
  StackSize < 8
  ##CurrencyBorder
  ##DefaultBackground
  SetFontSize 45

Hide # White-Yellow Maps
  BaseType "Scroll of Wisdom" "Portal Scroll"
  Class "Currency"
  AreaLevel > 67
  StackSize < 4
  ##CurrencyBorder
  ##DefaultBackground
  SetFontSize 45

Show # Red Maps
  BaseType "Scroll of Wisdom" "Portal Scroll"
  Class "Currency"
  ##CurrencyBorder
  ##DefaultBackground
  SetFontSize 40
  MinimapIcon 0 Grey Raindrop

#################
## T1 Currency ##
#################

Show # T1 Currency
  Class "Currency"
  BaseType == "Orb of Alteration" "Chaos Orb" "Orb of Scouring" "Orb of Regret" "Orb of Unmaking" "Regal Orb" "Instilling Orb"
  SetFontSize 45
  ##T1CurrencyText
  ##CurrencyBorder
  ##DefaultBackground
  MinimapIcon 0 Green Circle
  PlayEffect Green
  CustomAlertSound "sounds/brian-02-doof.mp3"

Show
  Class "Currency"
  BaseType "Catalyst" "Eldritch"
  SetFontSize 45
  ##T1CurrencyText
  ##CurrencyBorder
  ##DefaultBackground
  MinimapIcon 0 Green Circle
  PlayEffect Green
  CustomAlertSound "sounds/brian-02-doof.mp3"

