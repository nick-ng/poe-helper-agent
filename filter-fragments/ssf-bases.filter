  Rarity <= Rare
  BaseType "Full Dragonscale" "Ezomyte Tower Shield"
  SetFontSize 45
  PlayEffect Red
  CustomAlertSound "sounds/brian-05-woosh.mp3"
  MinimapIcon 1 Yellow Star

