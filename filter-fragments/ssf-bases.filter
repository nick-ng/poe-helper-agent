## filter-fragments/ssf-bases.filter

#defaultcolors:
#uniqueitem rgb(175,96,37)
#rareitem rgb(255,255,119)
#magicitem rgb(136,136,255)
#whiteitem rgb(200,200,200)
#gemitem rgb(27,162,155)
#currencyitem rgb(170,158,130)
#questitem rgb(74,230,58)
#defaultfontsize: 32 (18-45)

# Showing:
# 1. T1 Spell Supp.
# 2. T2 Spell Supp.

##########################
## Body Armour, Shields ##
##########################
Show
  Corrupted False
  ItemLevel > 77
  AreaLevel < 83
  BaseDefencePercentile >= 90
  Rarity <= Rare
  BaseType ##ilvl86a##
  SetFontSize 35
  PlayEffect Grey
  MinimapIcon 1 Yellow Star

Show
  BaseDefencePercentile >= 33
  AreaLevel < 83
  Rarity = Rare
  BaseType ##ilvl86a####ilvl86b##
  SetFontSize 30
  PlayEffect Grey Temp
  MinimapIcon 1 Yellow Star

###########################
## Helmet, Gloves, Boots ##
###########################
Show
  Corrupted False
  ItemLevel >= 76
  AreaLevel < 83
  BaseDefencePercentile >= 90
  Rarity <= Rare
  BaseType ##ilvl85a##
  SetFontSize 35
  PlayEffect Grey
  MinimapIcon 1 Yellow Star

Show
  BaseDefencePercentile >= 33
  AreaLevel < 83
  Rarity = Rare
  BaseType ##ilvl85a##
  SetFontSize 30
  PlayEffect Grey Temp
  MinimapIcon 1 Yellow Star

###########################
## Rings, Amulets, Belts ##
###########################
Show
  ItemLevel >= 84
  AreaLevel < 83
  Rarity <= Rare
  BaseType "Amethyst Ring" "Unset Ring" "Leather Belt" ##amulets##
  SetFontSize 40
  PlayEffect Red
  MinimapIcon 1 Yellow Cross

Show
  ItemLevel >= 72
  AreaLevel < 83
  Rarity <= Rare
  BaseType "Amethyst Ring" "Unset Ring" "Two-Stone Ring" "Leather Belt" ##amulets##
  SetFontSize 35
  PlayEffect Yellow
  MinimapIcon 1 Yellow Cross

Show
  ItemLevel >= 44
  AreaLevel < 83
  Rarity <= Rare
  BaseType "Amethyst Ring" "Unset Ring" "Two-Stone Ring"
  SetFontSize 30
  PlayEffect Grey Temp
  MinimapIcon 1 Yellow Cross

Show
  ItemLevel >= 54
  AreaLevel < 83
  Rarity <= Rare
  BaseType ##amulets##
  SetFontSize 30
  PlayEffect Grey Temp
  MinimapIcon 1 Yellow Cross

Show
  ItemLevel >= 64
  AreaLevel < 83
  Rarity <= Rare
  BaseType "Leather Belt"
  SetFontSize 30
  PlayEffect Grey Temp
  MinimapIcon 1 Yellow Cross


