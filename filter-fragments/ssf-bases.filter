##########################
## Body Armour, Shields ##
##########################
Show
  ItemLevel >= 86
  Rarity <= Rare
  BaseType "Full Dragonscale" "Cardinal Round Shield"
  SetFontSize 40
  SetBackgroundColor 101 8 214 255 # Bases BG Colour
  SetBorderColor 255 0 0 255
  MinimapIcon 1 Yellow Star

Show
  ItemLevel >= 77
  BaseDefencePercentile >= 90
  Rarity <= Rare
  BaseType "Full Dragonscale" "Cardinal Round Shield"
  SetFontSize 35
  SetBackgroundColor 101 8 214 255 # Bases BG Colour
  SetBorderColor 255 255 0 255
  MinimapIcon 1 Yellow Star

Show
  ItemLevel >= 77
  BaseDefencePercentile >= 33
  Rarity = Rare
  BaseType "Full Dragonscale" "General's Brigandine" "Cardinal Round Shield" "Supreme Spiked Shield"
  SetFontSize 30
  SetBackgroundColor 101 8 214 255 # Bases BG Colour
